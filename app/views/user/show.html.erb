
<div class="chatroom_container">

<h1>Hi</h1>

<%=@user.username%>
</div>

 <%= turbo_stream_from @chatrooms %>
<div id="messages">
</div>

<div class="container">
<h2>Messages</h2>
<table>
  <thead>
  <tr>
  
    
    <th>Body:</th>
    <th>User_id:</th>
    <th>Chatroom_id:</th>

    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <%  @user.messages.each do |message| %>
  
      <tr>
     
        <td><%= message.body %></td>
        <td><%= message.user_id %></td>
        <td><%= message.chatroom_id %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= button_to "Destroy", @message, method: :delete, data: { turbo_confirm: "Are you sure?"} %></td>
        <td><%= link_to "Back to messages", messages_path %></td>
         <td><%= link_to "Back to chatrooms", chatrooms_path %></td>

      </tr>
    <% end %>
  </tbody>
</table>

